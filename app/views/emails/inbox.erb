<h1>Welcome, <%= @current_user.username %></h1>

<h3>Contacts: </h3>
  <% contact_array = [] %>
  <% @contacts.each do |contact| %>
    <% contact_array << contact.address %>
  <% end %>
  <ol>
    <li><%= contact_array.uniq.join(", ") %></li>
  </ol>

  <br>
  <br>

<h3>Recieved: </h3>
<% if @recieved_emails.empty? %>
    <h2>Your inbox is empty</h2>
<% else %>
  <ol>
    <% recieved_array = [] %>
    <% @recieved_emails.each do |email|  %>
      <% recieved_array << email.content %>
    <% end %>
    <%= recieved_array.uniq.join %>
  </ol>
<% end %>

<br>
<br>

<h3>sent: </h3>
<% if @sent_emails.empty? %>
    <h2>Your inbox is empty</h2>
<% else %>
  <ol>
    <% sent_array = [] %>
    <% @sent_emails.each do |email|  %>
      <% sent_array << email.content %>
    <% end %>
    <%= sent_array.uniq.join %>
  </ol>
<% end %>


<br><br>


<button type="button" name="button"><a href="/new">Create New Email</a></button>

