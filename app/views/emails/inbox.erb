<h1>Welcome, <%= @current_user.username %></h1>

<h3>Contacts: </h3>
  <% contact_array = [] %>
  <% @contacts.each do |contact| %>
    <% contact_array << contact.address %>
  <% end %>
  <ol>
    <li><%= contact_array.uniq.join(", ") %></li>
  </ol>

  <br>
  <br>

<h3>recieved: </h3>
<% recieved_array = [] %>
<% if @recieved_emails.empty? %>
    <h2>Your inbox is empty</h2>
<% else %>
    <% @recieved_emails.each do |email|  %>
      <% recieved_array << email.content %>
    <% end %>
<% end %>
<ol>
  <% recieved_array.uniq.each.with_index do |content, i| %>
    <li><%= i + 1 %>. <%= content %></li>
  <% end %>
</ol>

<br>
<br>

<h3>sent: </h3>
<% sent_array = [] %>
<% if @sent_emails.empty? %>
    <h2>Your outbox is empty</h2>
<% else %>
    <% @sent_emails.each do |email|  %>
      <% sent_array << email.content %>
    <% end %>
<% end %>
<ol>
  <% sent_array.uniq.each.with_index do |content, i| %>
    <li><%= i + 1 %>. <%= content %></li>
  <% end %>
</ol>




<br><br>


